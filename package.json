{
  "name": "contract-certificate-controller",
  "version": "0.1.0-dev",
  "private": true,
  "description": "Smart-Contract standard for Programmable Conditional Token  Ownership",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:ConsenSys/client/fr/dauriel/securys/contract-certificate-controller.git"
  },
  "author": "ConsenSys France",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ConsenSys/client/fr/dauriel/securys/contract-certificate-controller"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "ecrecover",
    "token",
    "contracts"
  ],
  "files": [
    "contracts",
    "tests"
  ],
  "scripts": {
    "build:controller": "solcpiler -i './contracts/mocks/*.sol' --solc-version=\"v0.4.24+commit.e67f0147\" --output-artifacts-dir artifacts --insert-file-names imports",
    "build": "yarn run clean && yarn run build:controller",
    "clean": "rm -rf artifacts",
    "coverage": "solidity-coverage",
    "lint": "eslint ./migrations ./test ",
    "lint:fix": "eslint ./test ./migrations --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "lint:all": "npm run lint && npm run lint:sol",
    "lint:all:fix": "npm run lint:fix && npm run lint:sol:fix",
    "console": "truffle console",
    "version": "scripts/version.js",
    "remix": "python -mwebbrowser http://localhost:8080 && ./node_modules/remix-ide/bin/remix-ide"
  },
  "homepage": "https://gitlab.com/ConsenSys/client/fr/dauriel/securys/contract-certificate-controller",
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "chai-bignumber": "^2.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "^5.1.2",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "remix-ide": "^0.7.4",
    "solcpiler": "1.0.0-beta.9",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.1.8",
    "solium-plugin-zeppelin": "^0.0.2",
    "openzeppelin-test-helpers": "^0.1.2",
    "ganache-cli": "^6.4.0"
  },
  "dependencies": {
    "openzeppelin-solidity": "^2.1.3",
    "truffle": "5.0.1",
    "truffle-hdwallet-provider": "1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "truffle test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint ./test ./migrations --fix",
      "git add"
    ],
    "*.sol": [
      "solium -d . --fix",
      "git add"
    ]
  }
}
