{
  "name": "contract-certificate-controller",
  "version": "0.1.0-dev",
  "private": true,
  "description": "Smart-Contract standard for Programmable Conditional Token  Ownership",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:ConsenSys/client/fr/dauriel/securys/contract-certificate-controller.git"
  },
  "author": "ConsenSys France",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ConsenSys/client/fr/dauriel/securys/contract-certificate-controller"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "ecrecover",
    "token",
    "contracts"
  ],
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "chai-bignumber": "^2.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "ethereumjs-util": "^5.1.2",
    "ethjs-abi": "^0.2.1",
    "remixd": "git+https://github.com/ethereum/remixd.git",
    "solidity-coverage": "^0.5.0",
    "solium": "^1.1.7",
    "truffle": "^4.1.8",
    "truffle-hdwallet-provider": "0.0.3"
  },
  "scripts": {
    "lint:js": "eslint ./migrations ./test",
    "lint:js:fix": "eslint ./test ./migrations --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "lint:all": "npm run lint:js && npm run lint:sol",
    "lint:all:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "console": "truffle console",
    "contract:test": "truffle test --network development",
    "contract:test:coverage": "solidity-coverage",
    "contract:compile": "truffle compile && cp -r build/contracts/. src/web3/abis/",
    "contract:migrate:dev": "truffle migrate --reset --network development && cp -r build/contracts/. src/web3/abis/",
    "contract:migrate:ropsten": "truffle migrate --reset --network ropsten && cp -r build/contracts/. src/web3/abis/"
  }
}
